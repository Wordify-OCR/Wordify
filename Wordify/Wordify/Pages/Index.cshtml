@page
@model IndexModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home page";
}

@if(SignInManager.IsSignedIn(User))
{
    <br />
    <h4>Hello @User.Claims.First(c => c.Type == "FullName").Value</h4>
}

<h1>Upload an Image</h1>
<form method="post" enctype="multipart/form-data">

    <input type="text" id="inputUrl" asp-for="ImageFilePath" placeholder="Image URL"/><br />
    <span>-or-</span>

    <input type="file" asp-for="FormFile" />
    <br />

    <button type="submit"> Upload </button>
</form>

<p>@TempData["Test"]</p>

@if (Model.ResponseContent != null)
{
  <img src="~/test.PNG" />
  <textarea rows="10" cols="50">@Model.ResponseString</textarea>
}