@page
@model IndexModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home page";
}

@if (SignInManager.IsSignedIn(User))
{
    <br />
    <h4>Hello @User.Claims.First(c => c.Type == "FullName").Value</h4>
}

<h1>Upload an Image</h1>
<form method="post" enctype="multipart/form-data">

    <p>Select a jpg, png, or bmp image type</p>
    <p>4MB's or smaller</p>
    <p>40x40 min, 3200x3200 max</p>
    <input type="file" asp-for="FormFile" />
    <input type="text" placeholder="Title of Note" asp-for="Title" />
    <br />

    <button type="submit"> Upload </button>
</form>

<p>@TempData["Error"]</p>

@if (Model.ResponseContent != null)
{
    <form method="post" asp-page-handler="SaveNote">
        <img src="~/test.PNG" />
        <input type="hidden" asp-for="@Model.ByteData"/>
        <input asp-for="@Model.Title" value="@Model.Title"/>
        <textarea rows="10" cols="50" asp-for="@Model.ResponseString">@Model.ResponseString</textarea>
        @if(SignInManager.IsSignedIn(User))
        {
            <button type="submit" >Save</button>
        }
    </form>
}